{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="bg-white p-4 p-lg-5 rounded-4 shadow-sm" style="max-width: 400px; width: 100%;">
        <h1 class="h3 mb-4 text-center fw-bold">Connexion</h1>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post" novalidate>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="mb-3">
                <label for="username" class="form-label">Nom dâ€™utilisateur</label>
                <input type="text" id="username" name="username" value="{{ last_username }}" required autofocus class="form-control border-0 bg-light">
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" id="password" name="password" required class="form-control border-0 bg-light">
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                <label class="form-check-label checkbox-switch" for="remember_me">
                    Se souvenir de moi
                </label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">
                    Se connecter
                </button>
            </div>
        </form>

        <p class="mb-0 mt-2 p-0"><small>Pas encore de compte ? <a href="{{ path('app_register') }}" class="text-primary">Inscrivez-vous</a></small></p>
    </div>
</div>
{% endblock %}
