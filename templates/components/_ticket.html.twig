<style>

  .ticket {
    margin: 30px auto;
    page-break-after: always;
  }
  
  .ticket:last-child {
    page-break-after: none;
  }

  .ticket-header {
    background-color: #2c3e50;
    color: #ffffff;
    padding: 15px 20px;
    font-size: 20px;
    font-weight: bold;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
  }

  .ticket-body {
    padding: 20px;
    background-color: #f7f7f7;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
  }

  .ticket-section {
    margin-bottom: 10px;
  }

  .label {
    font-weight: bold;
    color: #333;
    display: inline-block;
    width: 90px;
  }

  .value {
    color: #000;
  }

  .footer-line {
    margin-top: 15px;
    margin-bottom: 15px;
    border-top: 1px dashed #999;
  }

  .highlight-box {
    background-color: #ffffff;
    border: 1px solid #ccc;
    padding: 8px 12px;
    display: inline-block;
    font-weight: bold;
  }
</style>
{% for i in range(1, booking.quantity) %}

    <div class="ticket">
        <div class="ticket-header">
            Billet
        </div>
        <div class="ticket-body">

            <div class="ticket-section">
                <span class="label">Evénement :</span>
                <span class="value">{{ event.title }}</span>
            </div>

            <div class="ticket-section">
                <span class="label">Lieu :</span>
                <span class="value">{{ event.location.name }}</span>
            </div>

            <div class="ticket-section">
                <span class="label">Type :</span>
                <span class="value">{{ event.type.name }}</span>
            </div>

            <div class="ticket-section">
                <span class="label">Date :</span>
                <span class="value">{{ event.startAt|date('d/m/Y H:i') }}</span>
            </div> 

            <div class="footer-line"></div>

            <div class="ticket-section">
                <span class="label">Réf :</span>
                <span class="value">#{{ event.id }}{{ i }}{{ user.id }}</span>
            </div>

        </div>
    </div>

{% endfor %}